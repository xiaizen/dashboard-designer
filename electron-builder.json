{
  "appId": "com.camoeye.desktop",
  "productName": "CamoEye",
  "directories": {
    "output": "release"
  },
  "files": [
    "dist/**/*",
    "electron/**/*",
    "public/**/*"
  ],
  "win": {
    "target": ["nsis"],
    "icon": "public/favicon.ico"
  },
  "mac": {
    "target": ["dmg"],
    "icon": "public/favicon.ico"
  },
  "linux": {
    "target": ["AppImage"],
    "icon": "public/favicon.ico"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "installerIcon": "public/favicon.ico"
  }
}
